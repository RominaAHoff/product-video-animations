<script>const c=document.getElementById('c');const x=c.getContext('2d');const img=new Image();img.src='showcase_images/dress_1757039530275.png';let t=0;img.onload=()=>{requestAnimationFrame(loop);};function loop(){x.clearRect(0,0,c.width,c.height);const g=x.createLinearGradient(0,0,c.width,c.height);g.addColorStop(0,'#f8f9fa');g.addColorStop(1,'#e9ecef');x.fillStyle=g;x.fillRect(0,0,c.width,c.height);const s=Math.min(c.width/img.width,c.height/img.height)*0.8;const fy=Math.sin(t*0.04)*12;x.save();x.translate(c.width/2,c.height/2);x.rotate(Math.sin(t*0.02)*0.06);x.scale(1+Math.sin(t*0.03)*0.02,1+Math.sin(t*0.03)*0.02);x.drawImage(img,-img.width*s/2,-img.height*s/2+fy,img.width*s,img.height*s);x.restore();t++;requestAnimationFrame(loop);} </script>
